<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".CategoryFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City News Categories"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/alegreya_sc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a category to view the latest news"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/akaya_telivigala"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false">

                <Button
                    android:id="@+id/local_news_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Local News"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/politics_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Politics"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/sports_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Sports"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/events_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Events"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/crime_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Crime"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/weather_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Weather"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/business_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Business"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/education_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Education"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>

                <Button
                    android:id="@+id/other_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Other"
                    android:background="@drawable/button_background"
                    android:textColor="@color/primary_text_color"
                    android:layout_columnWeight="1"/>
            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
