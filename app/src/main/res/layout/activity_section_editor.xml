<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/alegreya_sc"
                android:gravity="center"
                android:text="Section Editor View"
                android:textColor="@color/primary_text_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- News id -->
            <TextView
                android:id="@+id/news_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:text="News ID: Placeholder"
                android:textSize="16sp" />

            <!-- Uploaded media placeholder -->
            <ImageView
                android:id="@+id/uploaded_media"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:contentDescription="Uploaded media!" />

            <!-- Title -->
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:hint="Title"
                android:textSize="16sp" />

            <!-- Date -->
            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:hint="Date"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp" />

            <!-- Time -->
            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:hint="Time"
                android:textSize="16sp" />

            <!-- Location -->
            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:hint="Location"
                android:textSize="16sp" />

            <!-- Category -->
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="16dp" />

            <!-- Article -->
            <EditText
                android:id="@+id/article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:hint="Article"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:minLines="5" />

            <!-- Status -->
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:text="Status: Pending"
                android:textSize="16sp" />

            <!-- Approve and Reject buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_approve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:text="Approve"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Submit button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Submit"
                android:textSize="16sp" />

            <!-- Next button -->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="16sp" />
            <Button
                android:id="@+id/proceed_to_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to Dashboard"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:textColor="@color/primary_text_color"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
